<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_facturae" inherit_id="l10n_es_facturae.template_facturae">
        <xpath expr="//IssuerContractReference" position="attributes">
            <attribute name="t-if">line.issuer_contract_reference</attribute>
            <attribute name="t-field">line.issuer_contract_reference</attribute>
        </xpath>
        <xpath expr="//IssuerContractDate" position="attributes">
            <attribute name="t-if">line.issuer_contract_date</attribute>
            <attribute name="t-field">line.issuer_contract_date</attribute>
        </xpath>
        <xpath expr="//IssuerTransactionReference" position="attributes">
            <attribute name="t-if">line.issuer_transaction_reference</attribute>
            <attribute name="t-field">line.issuer_transaction_reference</attribute>
        </xpath>
        <xpath expr="//IssuerTransactionDate" position="attributes">
            <attribute name="t-if">line.issuer_transaction_date</attribute>
            <attribute name="t-field">line.issuer_transaction_date</attribute>
        </xpath>
        <xpath expr="//ReceiverContractReference" position="attributes">
            <attribute name="t-if">line.receiver_contract_reference</attribute>
            <attribute name="t-field">line.receiver_contract_reference</attribute>
        </xpath>
        <xpath expr="//ReceiverContractDate" position="attributes">
            <attribute name="t-if">line.receiver_contract_date</attribute>
            <attribute name="t-field">line.receiver_contract_date</attribute>
        </xpath>
        <xpath expr="//ReceiverTransactionReference" position="attributes">
            <attribute name="t-if">line.issuer_transaction_reference</attribute>
            <attribute name="t-field">line.receiver_transaction_reference</attribute>
        </xpath>
        <xpath expr="//ReceiverTransactionDate" position="attributes">
            <attribute name="t-if">line.receiver_transaction_date</attribute>
            <attribute name="t-field">line.receiver_transaction_date</attribute>
        </xpath>
        <xpath expr="//FileReference" position="attributes">
            <attribute name="t-if">line.file_reference</attribute>
            <attribute name="t-field">line.file_reference</attribute>
        </xpath>
        <xpath expr="//FileDate" position="attributes">
            <attribute name="t-if">line.file_date</attribute>
            <attribute name="t-field">line.file_date</attribute>
        </xpath>
    </template>
</odoo>
